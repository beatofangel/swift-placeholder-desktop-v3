{
  "name": "swift-placeholder-desktop-v3",
  "version": "0.0.0",
  "main": "dist-electron/background.js",
  "private": true,
  "description": "swift placeholder",
  "author": {
    "name": "Eric Wang",
    "email": "beatofangel@gmx.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint . --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@mdi/font": "7.0.96",
    "@vscode/sqlite3": "^5.1.2-vscode",
    "cls-hooked": "^4.2.2",
    "core-js": "^3.8.3",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "roboto-fontface": "*",
    "sequelize": "^6.29.3",
    "sqlite": "^4.1.2",
    "vue": "^3.2.13",
    "vue-router": "^4.0.0",
    "vue-toastification": "^2.0.0-rc.5",
    "vue3-draggable-next": "^4.1.4",
    "vuetify": "^3.1.15",
    "webfontloader": "^1.0.0"
  },
  "devDependencies": {
    "@babel/types": "^7.21.2",
    "@types/cls-hooked": "^4.3.3",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.9",
    "@types/webfontloader": "^1.6.35",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-typescript": "^11.0.0",
    "cross-env": "^7.0.3",
    "electron": "^23.1.2",
    "electron-builder": "^23.6.0",
    "eslint": "^8.22.0",
    "eslint-plugin-vue": "^9.3.0",
    "sass": "^1.55.0",
    "typescript": "^4.0.0",
    "vite": "^4.2.1",
    "vite-plugin-electron": "^0.11.1",
    "vite-plugin-vuetify": "^1.0.0-alpha.12",
    "vue-tsc": "^1.0.9"
  },
  "build": {
    "appId": "com.swiftplaceholder.your-app",
    "productName": "Swift Placeholder",
    "copyright": "Copyright Â© 2023 Eric Wang",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "dist-electron/background.js"
    ],
    "extraFiles": [
      {
        "from": "./database/",
        "to": "database",
        "filter": [
          "userdata.db"
        ]
      },
      {
        "from": "./instdir/",
        "to": "instdir",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./replaceApp/",
        "to": "replaceApp",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist-electron"
    }
  }
}
